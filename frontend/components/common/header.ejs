<head>
    <link rel="stylesheet" href="/styles/nav.css">
</head>

<header>
    <div class="nav-container">
        <div class="logo">
            <span><a href="/">DigiMArt</a></span>
        </div>
        <nav class="nav-menu">
            <ul class="links">
                <li><a href="/" class="<%= currentPage === 'home' ? 'active' : '' %>">HOME</a></li>
                <li><a href="/products" class="<%= currentPage === 'products' ? 'active' : '' %>">PRODUCTS</a></li>
                <% if (authenticated) { %>
                    <li><a href="/users/dashboard" class="<%= currentPage === 'dashboard' ? 'active' : '' %>">PROFILE</a></li>
                    <% if (user && user.role === 'admin') { %>
                        <li><a href="/users/admin" class="<%= currentPage === 'admin' ? 'active' : '' %>">USERS</a></li>
                        <li><a href="/products/admin" class="<%= currentPage === 'products-admin' ? 'active' : '' %>">MANAGE PRODUCTS</a></li>
                    <% } %>
                    <li><a href="/users/logout">LOGOUT</a></li>
                <% } else { %>
                    <li><a href="/users/login" class="<%= currentPage === 'login' ? 'active' : '' %>">LOGIN</a></li>
                    <li><a href="/users/register" class="<%= currentPage === 'register' ? 'active' : '' %>">REGISTER</a></li>
                <% } %>
            </ul>
        </nav>
        <div class="contact-link">
            <a href="#">+GET IN TOUCH</a></div>
    </div>
</header>