<h1>Dashboard</h1>
<section>
    <h2>Welcome</h2>
    <p>
        <% if (user && user.firstName) { %>
            Hello, <strong><%= user.firstName %> <%= user.lastName || "" %></strong>
        <% } else { %>
            Hello, <strong><%= user.email %></strong>
        <% } %>
    </p>
</section>
<section>
    <h2>Order Summary</h2>
    <p>Total Orders: <strong><%= totalOrders %></strong></p>
    <table>
        <thead>
            <tr>
                <th>Status</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="text-align: center;">To Pay</td>
                <td style="text-align: center;"><%= statusCounts.to_pay %></td>
            </tr>
            <tr>
                <td style="text-align: center;">Completed</td>
                <td style="text-align: center;"><%= statusCounts.completed %></td>
            </tr>
        </tbody>
    </table>
</section>
<section>
    <h2>Quick Links</h2>
</section>