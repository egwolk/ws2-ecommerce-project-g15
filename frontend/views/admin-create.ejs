<div class="form-container">
    <div class="form-header">
        <div class="form-title">ADD NEW USER</div>
    </div>
    <div class="form-sections">
        <div class="sect">
            <form action="/users/admin/create" method="POST" autocomplete="off">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" autocomplete="given-name" required value="<%= typeof formData !== 'undefined' && formData.firstName ? formData.firstName : '' %>">

                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" autocomplete="family-name" required value="<%= typeof formData !== 'undefined' && formData.lastName ? formData.lastName : '' %>">

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" autocomplete="email" required value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>">

                <label for="password">Password:</label>
                <div class="password-container">
                    <input type="password" id="password" name="password" autocomplete="new-password" required>
                    <span class="password-toggle" data-target="password">
                        <span class="eye-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" fill="currentColor">
                                <path d="M288 64c-140.8 0-229.3 128-256 192 26.7 64 115.2 192 256 192 140.8 0 229.3-128 256-192-26.7-64-115.2-192-256-192zM95.4 112.6C142.5 68.8 207.2 32 288 32s145.5 36.8 192.6 80.6c46.8 43.5 78.1 95.4 93 131.1 3.3 7.9 3.3 16.7 0 24.6-14.9 35.7-46.2 87.7-93 131.1-47.1 43.7-111.8 80.6-192.6 80.6S142.5 443.2 95.4 399.4c-46.8-43.5-78.1-95.4-93-131.1-3.3-7.9-3.3-16.7 0-24.6 14.9-35.7 46.2-87.7 93-131.1zM288 352c53 0 96-43 96-96 0-43.3-28.7-79.9-68.1-91.9 2.7 8.8 4.1 18.2 4.1 27.9 0 53-43 96-96 96-9.7 0-19.1-1.4-27.9-4.1 11.9 39.4 48.6 68.1 91.9 68.1zM160.2 263.8c-.2-2.6-.2-5.2-.2-7.8 0-12.2 1.7-23.9 4.9-35 .3-.9 .5-1.8 .8-2.7 12.4-40.4 44.3-72.2 84.7-84.7 11.9-3.7 24.6-5.6 37.7-5.6 2.5 0 5 .1 7.4 .2l.4 0c67.1 4 120.2 59.7 120.2 127.8 0 70.7-57.3 128-128 128-68.1 0-123.8-53.2-127.8-120.2zm32.1-16.1c9.3 5.3 20.1 8.4 31.6 8.4 35.3 0 64-28.7 64-64 0-11.5-3-22.3-8.4-31.6-46.4 4-83.3 40.9-87.3 87.3z"/>
                            </svg>
                        </span>
                    </span>
                </div>
                <sup class="input-msg" id="admin-password-strength-msg">Weak</sup>

                <label for="confirmPassword">Confirm Password:</label>
                <div class="password-container">
                    <input type="password" id="confirmPassword" name="confirmPassword" autocomplete="new-password" required>
                    <span class="password-toggle" data-target="confirmPassword">
                        <span class="eye-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" fill="currentColor">
                                <path d="M288 64c-140.8 0-229.3 128-256 192 26.7 64 115.2 192 256 192 140.8 0 229.3-128 256-192-26.7-64-115.2-192-256-192zM95.4 112.6C142.5 68.8 207.2 32 288 32s145.5 36.8 192.6 80.6c46.8 43.5 78.1 95.4 93 131.1 3.3 7.9 3.3 16.7 0 24.6-14.9 35.7-46.2 87.7-93 131.1-47.1 43.7-111.8 80.6-192.6 80.6S142.5 443.2 95.4 399.4c-46.8-43.5-78.1-95.4-93-131.1-3.3-7.9-3.3-16.7 0-24.6 14.9-35.7 46.2-87.7 93-131.1zM288 352c53 0 96-43 96-96 0-43.3-28.7-79.9-68.1-91.9 2.7 8.8 4.1 18.2 4.1 27.9 0 53-43 96-96 96-9.7 0-19.1-1.4-27.9-4.1 11.9 39.4 48.6 68.1 91.9 68.1zM160.2 263.8c-.2-2.6-.2-5.2-.2-7.8 0-12.2 1.7-23.9 4.9-35 .3-.9 .5-1.8 .8-2.7 12.4-40.4 44.3-72.2 84.7-84.7 11.9-3.7 24.6-5.6 37.7-5.6 2.5 0 5 .1 7.4 .2l.4 0c67.1 4 120.2 59.7 120.2 127.8 0 70.7-57.3 128-128 128-68.1 0-123.8-53.2-127.8-120.2zm32.1-16.1c9.3 5.3 20.1 8.4 31.6 8.4 35.3 0 64-28.7 64-64 0-11.5-3-22.3-8.4-31.6-46.4 4-83.3 40.9-87.3 87.3z"/>
                            </svg>
                        </span>
                    </span>
                </div>
                <sup class="input-msg" id="admin-confirm-password-msg">Not Match</sup>

                <label for="role">Role:</label>
                <select id="role" name="role" required>
                    <option value="customer" <%= typeof formData !== 'undefined' && formData.role === 'customer' ? 'selected' : '' %>>Customer</option>
                    <option value="admin" <%= typeof formData !== 'undefined' && formData.role === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>

                <label for="accountStatus">Account Status:</label>
                <select id="accountStatus" name="accountStatus">
                    <option value="active" <%= typeof formData !== 'undefined' && formData.accountStatus === 'active' ? 'selected' : 'selected' %>>Active</option>
                    <option value="inactive" <%= typeof formData !== 'undefined' && formData.accountStatus === 'inactive' ? 'selected' : '' %>>Inactive</option>
                </select>

                <label style="display: flex; align-items: center; gap: 10px; margin-bottom: 20px;">
                    <input type="checkbox" name="isEmailVerified" value="true" <%= typeof formData !== 'undefined' && formData.isEmailVerified ? 'checked' : 'checked' %>>
                    Mark email as verified
                </label>

                <div class="btn-container">
                    <button type="submit">Create User</button>
                </div>
            </form>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="sect login-info">
                <div class="message error">
                    <strong>Error:</strong> <%= error %>
                </div>
            </div>
        <% } %>
        <div class="sect login-info">
            <div class="utils">
                <p><a href="/users/admin">‚Üê Back to User Management</a></p>
            </div>
        </div>
    </div>
</div>