<% if (message) { %>
    <div class="admin-message <%= message.type === 'success' ? 'success' : 'error' %>">
        <%= message.text %>
    </div>
<% } %>

<div class="products-admin">
    <h1>Admin – Products</h1>
    <% if (message) { %>
        <!-- message banner already rendered above; kept for backward compatibility -->
    <% } %>

        <section class="admin-search" style="margin-bottom:15px;">
            <form action="/products/admin" method="GET">
                <label for="search">Search products:</label>
                <input type="text" id="search" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" placeholder="Search by name or category..." />

                <button type="submit" class="btn-secondary">Search</button>
                <a href="/products/admin" class="clear btn-secondary">Clear</a>
            </form>
        </section>

    <p>Welcome to the Products Administration Page.</p>
    <a href="/products/admin/create" class="button btn-secondary">Add New Product</a>
    
    <% if (products.length === 0) { %>
        <p>No products found.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.category %></td>
                        <td>₱<%= product.price %></td>
                        <td>
                            <div class="actions">
                                <a href="/products/<%= product._id %>" class="btn-danger btn-small view-btn">View</a>
                                <a href="/products/admin/<%= product._id %>/edit" class="btn-danger btn-small edit-btn">Edit</a>
                                <form action="/products/delete/<%= product.productId %>" method="POST">
                                    <button type="submit" class="btn-danger btn-small" onclick="return confirm('Are you sure you want to permanently delete this product? This action cannot be undone.')">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>