<div class="products-admin">
    <h1>Users</h1>
    <p>Welcome, <%= user.firstName %> (<%= user.role %>)</p>

    <a href="/users/admin/create" class="button btn-secondary">Add New User</a>
    <% if (users.length <= 0) { %>
        <p>No users found.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(userItem => { %>
                    <tr>
                        <td><%= userItem.userId %></td>
                        <td><%= userItem.firstName %> <%= userItem.lastName %></td>
                        <td><%= userItem.email %></td>
                        <td><%= userItem.role %></td>
                        <td><%= userItem.accountStatus %></td>
                        <td><%= new Date(userItem.createdAt).toLocaleDateString() %></td>
                        <td>
                            <div class="actions">
                                <a href="/users/edit/<%= userItem.userId %>" class="btn-danger btn-small edit-btn">Edit</a>
                                <form action="/users/delete/<%= userItem.userId %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn-danger btn-small" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

</div>