<div class="form-container">
    <div class="form-header">
        <div class="form-title">EDIT USER</div>
    </div>
    <div class="form-sections">
        <div class="sect">
            <form action="/users/edit/<%= user._id %>" method="POST" autocomplete="off">
                <label for="firstName">First Name:</label>
                <input type="text" name="firstName" value="<%= user.firstName %>" autocomplete="off" required>
                
                <label for="lastName">Last Name:</label>
                <input type="text" name="lastName" value="<%= user.lastName %>" autocomplete="off" required>
                
                <label for="email">Email:</label>
                <input type="email" name="email" value="<%= user.email %>" autocomplete="off" required>
                
                <label for="accountStatus">Account Status:</label>
                <select name="accountStatus" required>
                    <option value="active" <%= user.accountStatus === 'active' ? 'selected' : '' %>>Active</option>
                    <option value="inactive" <%= user.accountStatus === 'inactive' ? 'selected' : '' %>>Inactive</option>
                </select>
                
                <label for="role">Role:</label>
                <select name="role" required>
                    <option value="customer" <%= user.role === 'customer' ? 'selected' : '' %>>Customer</option>
                    <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>
                
                <div class="btn-container">
                    <button type="submit">Update</button>
                </div>
            </form>
        </div>
        <div class="sect login-info">
            <div class="utils">
                <p><a href="/users/admin">‚Üê Back to User Management</a></p>
            </div>
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="message">
                    <%= message %>
                </div>
            <% } %> 
        </div>
    </div>
</div>