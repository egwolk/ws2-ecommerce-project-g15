    <div class="form-container">
    <div class="form-header">
        <div class="form-title">EDIT PRODUCT</div>
    </div>
    <div class="form-sections">
        <div class="sect">
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="message">
                    <%= message %>
                </div>
            <% } %> 
        </div>
        <div class="sect">
            <form action="/products/admin/<%= product._id %>/edit" method="POST" enctype="multipart/form-data" autocomplete="off">

                <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                <div style="color: red;">
                    <p>Please fix the following errors:</p>
                    <ul>
                        <% errors.forEach(function(err) { %>
                            <li><%= err %></li>
                        <% }) %>
                    </ul>
                </div>
                <% } %>

                <label for="name">Product Name:</label>
                <input type="text" name="name" id="name" value="<%= typeof formData !== 'undefined' && formData.name ? formData.name : (product && product.name ? product.name : '') %>" autocomplete="off" required>

                <label for="description">Description:</label>
                <textarea name="description" id="description" rows="4"><%= typeof formData !== 'undefined' && formData.description ? formData.description : (product && product.description ? product.description : '') %></textarea>

                <label for="price">Price:</label>
                <input type="text" name="price" id="price" value="<%= typeof formData !== 'undefined' && formData.price ? formData.price : (product && (product.price || product.price === 0) ? product.price : '') %>" required>

                <label for="category">Category:</label>
                <input type="text" name="category" id="category" value="<%= typeof formData !== 'undefined' && formData.category ? formData.category : (product && product.category ? product.category : '') %>" autocomplete="off">

                <% if (product.imageUrl) { %>
                    <label>Current Image:</label>
                    <div class="current-image">
                        <img src="<%= product.imageUrl %>" alt="Current product image" style="max-width: 200px; max-height: 200px; object-fit: cover; border: 1px solid var(--warm-off-white);">
                    </div>
                <% } %>

                <label for="productImage">Update Product Image:</label>
                <input type="file" name="productImage" id="productImage" accept="image/jpeg,image/jpg,image/png,image/gif,image/webp">
                <small>Supported formats: JPEG, PNG, GIF, WebP. Max size: 5MB. Leave empty to keep current image.</small>

                <label for="isActive">Status:</label>
                <select name="isActive" id="isActive">
                    <option value="true" <%= product.isActive ? 'selected' : '' %>>Active</option>
                    <option value="false" <%= !product.isActive ? 'selected' : '' %>>Inactive</option>
                </select>

                <div class="btn-container">
                    <button type="submit">Update Product</button>
                </div>
            </form>
        </div>
        <div class="sect login-info">
            <div class="utils">
                <p><a href="/products/admin">‚Üê Back to Manage Products</a></p>
            </div>
        </div>
    </div>
</div>