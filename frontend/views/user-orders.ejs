<div class="products-admin">
<h1>My Orders</h1>

<section>
    <h2>To Pay</h2>
    <% if (ordersByStatus.to_pay.length === 0) { %>
        <p>No orders in this status.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Total Amount</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                <% ordersByStatus.to_pay.forEach(order => { %>
                    <tr>
                        <td><%= order.orderId %></td>
                        <td>₱<%= Number(order.totalAmount).toFixed(2) %></td>
                        <td>
                        <% if (order.createdAt && order.createdAt.toLocaleString) { %>
                            <%= order.createdAt.toLocaleString() %>
                        <% } else { %>
                            <%= order.createdAt %>
                        <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</section>

<section>
    <h2>Completed</h2>
    <% if (ordersByStatus.completed.length === 0) { %>
        <p>No orders in this status.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Total Amount</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                <% ordersByStatus.completed.forEach(order => { %>
                <tr>
                    <td><%= order.orderId %></td>
                    <td>₱<%= Number(order.totalAmount).toFixed(2) %></td>
                    <td>
                    <% if (order.createdAt && order.createdAt.toLocaleString) { %>
                        <%= order.createdAt.toLocaleString() %>
                    <% } else { %>
                        <%= order.createdAt %>
                    <% } %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</section>
</div>